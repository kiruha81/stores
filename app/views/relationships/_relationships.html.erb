<td><%=link_to user_path(user) do %>
  <%= image_tag user.get_profile_image(70, 70) %>
<% end %></td>
<td class="text-dark"><%= user.name %></td>
<td class="text-dark"><%= user.introduction %></td>
<td>フォロー<%= user.followings.count %></td>
<td>フォロワー<%= user.followers.count %></td>
<% if current_user.following?(user) %>
    <td><%= link_to "フォローやめ", user_relationships_path(user.id), method: :delete, remote: true %></td>
  <% else %>
    <% unless user.id == current_user.id %>
      <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true %></td>
    <% end %>
  <% end %>