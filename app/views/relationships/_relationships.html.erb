<% if current_user.following?(user) %>
    <td><%= link_to "フォローやめ", user_relationships_path(user.id), method: :delete, remote: true %></td>
  <% else %>
    <% unless user.id == current_user.id %>
      <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true %></td>
    <% end %>
  <% end %>